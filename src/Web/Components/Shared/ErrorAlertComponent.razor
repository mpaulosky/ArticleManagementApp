@if (!string.IsNullOrWhiteSpace(ErrorMessage) || (Errors is not null && Errors.Count > 0))
{
	<div class="alert alert-danger alert-dismissible fade show @CssClass" role="alert">
		<strong>
			<i class="bi bi-exclamation-triangle-fill me-2"></i>
			@Title
		</strong>
		@if (!string.IsNullOrWhiteSpace(ErrorMessage))
		{
			<p class="mb-0 mt-2">@ErrorMessage</p>
		}
		@if (Errors is not null && Errors.Count > 0)
		{
			<ul class="mb-0 mt-2">
				@foreach (var error in Errors)
				{
					<li>@error</li>
				}
			</ul>
		}
		@if (IsDismissible)
		{
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		}
	</div>
}

@code {
	/// <summary>
	/// Gets or sets the error message to display.
	/// </summary>
	[Parameter]
	public string ErrorMessage { get; set; } = string.Empty;

	/// <summary>
	/// Gets or sets the list of error messages to display.
	/// </summary>
	[Parameter]
	public List<string>? Errors { get; set; }

	/// <summary>
	/// Gets or sets the alert title.
	/// </summary>
	[Parameter]
	public string Title { get; set; } = "Error";

	/// <summary>
	/// Gets or sets whether the alert is dismissible.
	/// </summary>
	[Parameter]
	public bool IsDismissible { get; set; } = true;

	/// <summary>
	/// Gets or sets additional CSS classes to apply to the component.
	/// </summary>
	[Parameter]
	public string CssClass { get; set; } = string.Empty;
}
