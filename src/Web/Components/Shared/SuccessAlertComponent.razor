@if (!string.IsNullOrWhiteSpace(Message))
{
	<div class="alert alert-success alert-dismissible fade show @CssClass" role="alert">
		<strong>
			<i class="bi bi-check-circle-fill me-2"></i>
			@Title
		</strong>
		<p class="mb-0 mt-2">@Message</p>
		@if (IsDismissible)
		{
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		}
	</div>
}

@code {
	/// <summary>
	/// Gets or sets the success message to display.
	/// </summary>
	[Parameter]
	public string Message { get; set; } = string.Empty;

	/// <summary>
	/// Gets or sets the alert title.
	/// </summary>
	[Parameter]
	public string Title { get; set; } = "Success";

	/// <summary>
	/// Gets or sets whether the alert is dismissible.
	/// </summary>
	[Parameter]
	public bool IsDismissible { get; set; } = true;

	/// <summary>
	/// Gets or sets additional CSS classes to apply to the component.
	/// </summary>
	[Parameter]
	public string CssClass { get; set; } = string.Empty;
}
